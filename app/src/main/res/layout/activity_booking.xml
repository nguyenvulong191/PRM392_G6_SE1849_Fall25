<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🛏️ Đặt Phòng Khách Sạn"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Room Info -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:radius="12dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvRoomInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng Deluxe - $150/đêm"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌆 View biển, phòng rộng rãi, đầy đủ tiện nghi."
                    android:textSize="14sp"
                    android:textColor="#666" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Check-in / Check-out -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📅 Thông tin ngày đặt"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etCheckIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ngày nhận phòng"
                android:inputType="date"
                android:background="@drawable/input_bg"
                android:padding="10dp" />

            <Space android:layout_width="8dp" android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etCheckOut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ngày trả phòng"
                android:inputType="date"
                android:background="@drawable/input_bg"
                android:padding="10dp" />
        </LinearLayout>

        <!-- Guests -->


        <!-- Add-ons -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧾 Dịch vụ thêm"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/cbBreakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🍳 Bữa sáng (+$10)"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cbPickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🚗 Đưa đón sân bay (+$20)"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cbSpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💆‍♀️ Dịch vụ spa (+$30)"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cbDinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🍽️ Bữa tối sang trọng (+$25)"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 Ghi chú thêm"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: check-in sớm, thêm gối, dị ứng hải sản..."
            android:background="@drawable/input_bg"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />


        <!-- Confirm button -->
        <Button
            android:id="@+id/btnConfirmBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận đặt phòng"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:padding="12dp" />

        <!-- Review Summary -->
        <TextView
            android:id="@+id/tvReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#333"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Back Home -->
        <Button
            android:id="@+id/btnBackHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⬅️ Về trang chủ"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
